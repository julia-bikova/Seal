<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.julia.seal.Pie"
    android:background="@drawable/pies">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:ems="10"
        android:id="@+id/editText2"
        android:text="Мой Пирожок! Нашей любви уже четыре с половиной года. Мы знаем друг о друге так много, столько всего пережили, увидели, почувствовали, а любовь не угасает, и будет в наших сердцах всю жизнь! Люблю тебя, Пирог, Пушок, Пенёк!=))***"
        android:background="#ffffed76"
        android:elegantTextHeight="false"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="105dp"
        android:text="@string/our_days"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:enabled="true"
        android:background="#ffcff5ff"
        android:typeface="normal"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/counter"
        android:textSize="22sp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
